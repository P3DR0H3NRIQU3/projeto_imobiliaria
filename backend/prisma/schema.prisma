generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


/// This model contains row level security and requires additional setup for migrations. Visit https://pris.ly/d/row-level-security for more info.
model fotos_imovel {
  id_foto    String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  imovel_id  String?  @db.Uuid
  url        String
  ordem_foto Int
  destaque   Boolean?
  imovel     imovel?  @relation(fields: [imovel_id], references: [id_imovel], onDelete: NoAction, onUpdate: NoAction)
}

/// This table contains check constraints and requires additional setup for migrations. Visit https://pris.ly/d/check-constraints for more info.
/// This model contains row level security and requires additional setup for migrations. Visit https://pris.ly/d/row-level-security for more info.
model imovel {
  id_imovel            String         @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  titulo               String
  descricao            String?
  tipo_imovel          String
  status               String
  valor_imovel         Decimal        @db.Decimal(12, 2)
  area_m2              Int
  quartos              Int            @db.SmallInt
  suites               Int?           @default(0) @db.SmallInt
  banheiros            Int            @db.SmallInt
  vagas_garagem        Int?           @default(0) @db.SmallInt
  andar                Int?           @db.SmallInt
  mobiliado            Boolean        @default(false)
  created_at           DateTime       @default(now()) @db.Timestamptz(6)
  updated_at           DateTime?      @default(now()) @db.Timestamptz(6)
  area_construida      Int?           @db.SmallInt
  aceita_financiamento Boolean?
  aceita_fgts          Boolean?
  rua                  String
  numero               Int            @db.SmallInt
  bairro               String
  cidade               String?
  cep                  String?
  perto_estacao        Boolean?       @default(false)
  valor_condominio     Decimal?       @db.Decimal
  possui_elevador      Boolean?       @default(false)
  churrasqueira        Boolean?       @default(false)
  area_gourmet         Boolean?       @default(false)
  varanda              Boolean?       @default(false)
  ar_condicionado      Boolean?       @default(false)
  academia             Boolean?       @default(false)
  area_lazer           Boolean?       @default(false)
  salao_festas         Boolean?       @default(false)
  portaria_24h         Boolean?       @default(false)
  escritura            Boolean?       @default(false)
  iptu_pago            Boolean?       @default(false)
  destaque             Boolean        @default(false)
  slug                 String
  fotos_imovel         fotos_imovel[]
}

/// This table contains check constraints and requires additional setup for migrations. Visit https://pris.ly/d/check-constraints for more info.
/// This model contains row level security and requires additional setup for migrations. Visit https://pris.ly/d/row-level-security for more info.
model usuario {
  id_usuario String @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  nome       String
  telefone   String
  email      String
  senha      String @unique
  tipo       String
}
